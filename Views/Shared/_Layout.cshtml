<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - EKMS</title>
    <link rel="icon" href="~/logosficon.ico" type="image/ico" />
    <!-- Font Awesome -->
    <link href="~/plugins/fontawesome-free/css/all.min.css" rel="stylesheet" />
    
    <!-- Tempusdominus Bootstrap 4 -->
    <link rel="stylesheet" href="~/plugins/tempusdominus-bootstrap-4/css/tempusdominus-bootstrap-4.min.css">
    <!-- iCheck -->
    <link rel="stylesheet" href="~/plugins/icheck-bootstrap/icheck-bootstrap.min.css">

    <!-- overlayScrollbars -->
    <link rel="stylesheet" href="~/plugins/overlayScrollbars/css/OverlayScrollbars.min.css">
    <!-- Daterange picker -->
    <link rel="stylesheet" href="~/plugins/daterangepicker/daterangepicker.css">
    <!-- Select2 -->
    <link rel="stylesheet" href="~/plugins/select2/css/select2.min.css">
    <link rel="stylesheet" href="~/plugins/select2-bootstrap4-theme/select2-bootstrap4.min.css">

    <!-- bootstrap -->
    
    <!-- Theme style -->
    <link href="~/css/adminlte.css" rel="stylesheet" />
    <link href="~/lib/custom.css" rel="stylesheet" />
    <link href="~/lib/LoaderStyle.css" rel="stylesheet" asp-append-version="true" />

    <!-- jQuery -->
    <script src="~/plugins/jquery/jquery.min.js"></script>

</head>
<body class="hold-transition sidebar-mini layout-fixed">
    <!-- Loader -->
    <div class="loading">  </div>
    <div class="wrapper">
        <!-- Navbar -->
        <nav class="main-header navbar navbar-expand navbar-white navbar-light">
            <!-- Left navbar links -->
            

            <!-- Right navbar links -->
            <ul class="navbar-nav ml-auto">
                <li class="nav-item dropdown user-menu">

                    <a href="#" class="nav-link dropdown-toggle" data-toggle="dropdown">
                        <span class="username">@ViewBag.LoggedUserName</span>
                        <img src="~/lib/dist/img/userimage.png" class="user-image img-circle ml-2" alt="User Image">
                    </a>

                    <ul class="dropdown-menu dropdown-menu-xl rounded border-0 pt-2">
                        <!-- User image -->
                        <li class="nav-dropdown-user-header border-bottom rounded-top p-3">
                            <div class="d-flex align-items-center">
                                <img src="~/lib/dist/img/userimage.png" class="nav-dropdown-user-img img-circle mr-2" alt="User Image">
                                <div class="text-left flex-nowrap userDropdownBlock mx-2">
                                    <p class="txt-large text-bold mr-1">@ViewBag.LoggedUserName</p>
                                    <p class="text-bold text-black-50 mr-1 w-auto text-wrap wordWrap">@ViewBag.LoggedUser</p>
                                </div>
                            </div>
                        </li>
                        <li class="user-footer rounded">
                            <a asp-controller="Login" asp-action="Logout" asp-route-status="1" class="btn btn-flat btn-block rounded text-bold user-signOut ">
                                Sign
                                out
                            </a>
                        </li>

                    </ul>

                </li>
                <li class="nav-item">
                    <a class="nav-link" data-widget="fullscreen" href="javascript:void(0);" role="button">
                        <i class="fas fa-expand-arrows-alt"></i>
                    </a>
                </li>
            </ul>
        </nav>
        <!-- /.navbar -->
        <!-- Main Sidebar Container -->
        <aside class="main-sidebar sidebar-dark-primary elevation-4">
            <!-- Brand Logo -->

            <a class="brand-link" asp-controller="Dashboard" asp-action="Index">
                <span class="logo-lg "><span class="font-weight-bold">TaskManagement </span>Portal</span>
            </a>

            <!-- Sidebar -->
            <div class="sidebar">
                <!-- Sidebar Menu -->
                <nav class="mt-2">
                    <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="true">
                                    <li class="nav-item">
                                        <a asp-controller="Dashboard" asp-action="Index" class="nav-link @Html.IsActive("Dashboard", "Index")">
                                            <i class="nav-icon fas fa-tachometer-alt"></i>
                                            <p>
                                                Dashboard
                                            </p>
                                        </a>
                                    </li>

                                    <li class="nav-item @Html.IsActiveLi("User")">
                                            <a href="#" class="nav-link @Html.IsActiveTab("User")">
                                                <i class="nav-icon fa fa-user"></i>
                                                <p>
                                                    User Management
                                                    <i class="right fas fa-angle-left"></i>
                                                </p>
                                            </a>
                                            <ul class="nav nav-treeview">
                                                
                                                    <li class="nav-item">
                                                        <a asp-controller="User" asp-action="UserList" class="nav-link @Html.IsActive("User", "UserList")">
                                                            <i class="far fa-circle nav-icon"></i>
                                                            <p>User List</p>
                                                        </a>
                                                    </li>
                                            </ul>
                                        </li>

                                        <li class="nav-item @Html.IsActiveLi("Task")">
                                            <a href="#" class="nav-link @Html.IsActiveTab("Task")">
                                <i class="nav-icon fa fa-tasks"></i>
                                                <p>
                                                    Task Management
                                                    <i class="right fas fa-angle-left"></i>
                                                </p>
                                            </a>
                                            <ul class="nav nav-treeview">
                                                
                                                    <li class="nav-item">
                                                        <a asp-controller="Task" asp-action="TaskList" class="nav-link @Html.IsActive("Task", "TaskList")">
                                                            <i class="far fa-circle nav-icon"></i>
                                                            <p>Task List</p>
                                                        </a>
                                                    </li>
                                            </ul>
                                        </li>
                    </ul>
                </nav>
                <!-- /.sidebar-menu -->
            </div>
            <!-- /.sidebar -->
        </aside>

        <div class="content-wrapper">
            <main role="main" class="content">
                <div class="container-fluid py-3">
                    @RenderBody()
                </div>
            </main>
            <div class="pb-5 bg-transarent"></div>
        </div>
        <!-- /.content-wrapper -->
        <footer class="main-footer">
            <strong>Copyright &copy; @DateTime.Now.Year <a href="https://www.google.com/" target="_blank"> YOGESH CHANDEKAR PVT. LTD</a>.</strong>
            All rights reserved.
            <div class="float-right d-none d-sm-inline-block">
                <b>Version</b> 1.0.0
            </div>
        </footer>

        <div class="modal fade" id="modal-default-idletimeout" data-backdrop="static" data-keyboard="false">
            <div class="modal-dialog modal-md">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title">Idle Timeout</h4>
                    </div>

                    <div class="modal-body">
                        <span id="idletimeoutmsg"></span>
                    </div>
                    <div class="modal-footer">
                        <button type="button" class="btn btn-danger" data-dismiss="modal" id="resetIdleTimeout">Cancel</button>
                    </div>
                </div>
                <!-- /.modal-content -->
            </div>
            <!-- /.modal-dialog -->
        </div>

    </div>

        

    <!-- jQuery UI 1.11.4 -->
    <script src="~/plugins/jquery-ui/jquery-ui.min.js"></script>
    <!-- Resolve conflict in jQuery UI tooltip with Bootstrap tooltip -->

    @*<script src="~/plugins/popper/popper.min.js"></script>*@
    <!-- Bootstrap 4 -->
    @*<script src="~/plugins/bootstrap/js/bootstrap.min.js"></script>*@
    <script src="~/plugins/bootstrap/js/bootstrap.bundle.min.js"></script>

    <!-- daterangepicker -->
    <script src="~/plugins/moment/moment.min.js"></script>
    <script src="~/plugins/daterangepicker/daterangepicker.js"></script>
    <!-- Tempusdominus Bootstrap 4 -->
    <script src="~/plugins/tempusdominus-bootstrap-4/js/tempusdominus-bootstrap-4.min.js"></script>

    <script src="~/plugins/select2/js/select2.full.min.js"></script>

    <!-- overlayScrollbars -->
    <script src="~/plugins/overlayScrollbars/js/jquery.overlayScrollbars.min.js"></script>
    <!-- AdminLTE App -->
    <script src="~/lib/dist/js/adminlte.js"></script>

    <partial name="_ValidationScriptsPartial.cshtml"></partial>

    <script src="~/lib/LoaderJs.js" asp-append-version="true"></script>

    @* External JS *@
    <script src="~/lib/AppJS/Layout/Layout.js"></script>


    @RenderSection("Scripts", required: false)

    <script asp-add-nonce="true">
        
    </script>
</body>
</html>
